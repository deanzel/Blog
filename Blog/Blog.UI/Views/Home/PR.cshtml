@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/flatly/bootstrap.min.css" rel="stylesheet" typ="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

    <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, null)</li>
                            <li>@Html.ActionLink("API", "Index", "Help", new { area = "" }, null)</li>
                        </ul>
                    </div>
                </div>
            </div>


<body id="admin-body" ng-app="PR">
    <section ng-controller="PRPanelController as panel">
        <div class="row">
            <div class="col-sm-3 col-md-2  sidebar">
                <ul class="nav nav-sidebar">
                    <li ng-class="{ active: panel.isSelected(1)}">
                        <a href ng-click="panel.selectTab(1)">Dashboard</a>
                    </li>
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li ng-class="{ active: panel.isSelected(3)}">
                        <a href ng-click="panel.selectTab(3)"> New Post</a>
                    </li>
                    <li ng-class="{ active: panel.isSelected(4)}">
                        <a href ng-click="panel.selectTab(4)"> New Page</a>
                    </li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-10 col-md-offset-2 main">
                <br />
                <h2>Admin Dashboard</h2>
                <hr />
                <!--DASHBOARD-->
            <div ng-show="panel.isSelected(1)">
                <div class="col-md-offset-2 col-md-4">
                    <div class="panel">
                        <div class="panel-body">
                            <a href="#"><h4 class="glyphicon glyphicon-plus-sign"> New Page</h4></a>
                        </div>
                    </div>
                </div>

                <div class="col-md-offset-2 col-md-4">
                    <div class="panel">
                        <div class="panel-body">
                            <a href="#"><h4 class="glyphicon glyphicon-plus-sign"> New Post</h4></a>
                        </div>
                    </div>
                </div>
            </div>

                <div ng-show="panel.isSelected(3)">
                    <div class="col-md-6">
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">New Post</h3>
                            </div>
                            <div class="panel-body">

                                <!--TINY MCE-->
                                <textarea>Easy (and free!) You should check out our premium features.</textarea>

                            </div>
                        </div>
                    </div>
                </div>
                <div ng-show="panel.isSelected(4)">
                    <div class="col-md-6">
                        <div class="panel">
                            <div class="panel-heading">
                                <h3 class="panel-title">New Page</h3>
                            </div>
                            <div class="panel-body">

                                <!--Tiny MCE-->
                                <textarea>Easy (and free!) You should check out our premium features.</textarea>

                            </div>
                        </div>
                    </div>
                </div>
                
    </section>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
<script src="~/Scripts/app/admin.js"></script>
    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>
</body>
</html>
