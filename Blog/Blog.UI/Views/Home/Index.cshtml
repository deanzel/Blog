            <div class="container">

                <div class="row">
                    <p>
                        <button class="btn btn-default pull-right">@Html.ActionLink("Register Today!", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</button>
                    </p>
                </div>
            </div>
        </div>*@

        <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-10 col-md-offset-2 main">
            <div class="row">
                <div class="col-md-8">
                    <h3>Blog Posts</h3>
                    @foreach (var post in Model.BlogPosts)
                    {
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                            <h3>@post.BlogPostTitle<small class="pull-right">Date: @post.TimeCreated</small></h3>
                            </div>

                            <div class="panel-body">
                                <div class="col-md-12">
                                    <p>Post Text</p>
                                    <blockquote>@Html.Raw(post.BlogPostText)</blockquote>
                                </div>
                                <div class="row">
                                    <div class="col-md-4">
                                        <p>Category: @post.Category.CategoryTitle</p>
                                    </div>
                                    <div class="col-md-3 pull-right">
                                        <p>Hashtags</p>
                                        @if (post.Hashtags.Count > 0)
                                        {
                                            string hashtags = "";
                                            for (int i = 0; i < post.Hashtags.Count - 1; i++)
                                            {
                                                hashtags += "#" + post.Hashtags[i].HashtagTitle + ", ";
                                            }
                                            hashtags += "#" + post.Hashtags[post.Hashtags.Count - 1].HashtagTitle;
                                            <p>@hashtags</p>
                                        }
                                        else
                                        {
                                            <p>No hashtags added...</p>
                                        }
                                    </div>
                                </div>
                                <small><cite title="Source Title">Source Title</cite></small>
                                <div class="row">
                                    <div class="col-md-2">
                                        <p>Author: @post.User.UserName</p>
                                    </div>
                                    @*<div class="col-md-2">
                                    <p>Status: @post.Status</p>
                                </div>*@
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

