        <div class="col-md-6">
            <div id="home-slider" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li data-target="#home-slider" data-slide-to="0" class="active"></li>
                    <li data-target="#home-slider" data-slide-to="1"></li>
                    <li data-target="#home-slider" data-slide-to="2"></li>
                    <li data-target="#home-slider" data-slide-to="3"></li>
                </ol>

                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    @*<div class="item active">
                        @if (!Request.IsAuthenticated)
                        {
                            <div class="row">
                                <h4><span class="pull-right lead">We are JsDate and we aim to "plug" you in with the coding “partner” of your dreams.</span></h4>
                                <h4><span class="pull-right lead">Get ready to take your “paired-programming” to the next level...</span></h4>
                                <p>
                                    <button class="btn btn-default pull-right">@Html.ActionLink("Register Today!", "Register", "Account", routeValues: null, htmlAttributes: new {id = "registerLink"})</button>
                                </p>
                            </div>
                        }
                    </div>*@
                    <div class="item active">
                        
                        <img src="@Model.BlogPosts[0].CoverImageUrl" alt="Chania">
                    </div>
                    
                    <div class="item">
                        <img src="@Model.BlogPosts[1].CoverImageUrl" alt="Flower">
                    </div>

                    <div class="item">
                        <img src="@Model.BlogPosts[2].CoverImageUrl" alt="Flower">
                    </div>
                </div>

                <!-- Left and right controls -->
                <a class="left carousel-control" href="#home-slider" role="button" data-slide="prev">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#home-slider" role="button" data-slide="next">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-xs-4 padding-bot-40">
                    <img class="head-block-thumb" src="@Model.BlogPosts[2].CoverImageUrl"/>
                </div>
                <div class="col-xs-8 padding-left-40">
                    <h3>@Model.BlogPosts[2].BlogPostTitle</h3>
                    <p>@Model.BlogPosts[2].Description</p>
                </div>
            </div>
        <div class="row">
            <div class="col-xs-4 padding-bot-40">
                <img class="head-block-thumb" src="@Model.BlogPosts[2].CoverImageUrl" />
            </div>
            <div class="col-xs-8 padding-left-40">
                <h3>@Model.BlogPosts[2].BlogPostTitle</h3>
                <p>@Model.BlogPosts[2].Description</p>
            </div>       
        </div>
            <div class="row">
                <div class="col-xs-4">
                    <img class="head-block-thumb" src="@Model.BlogPosts[2].CoverImageUrl"/>
                </div>
                <div class="col-xs-8 padding-left-40">
                    <h3>@Model.BlogPosts[2].BlogPostTitle</h3>
                    <p>@Model.BlogPosts[2].Description</p>
                </div>
            </div>      
        </div>
    </div>

    <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-10 col-md-offset-2 main">
        <div class="row">
            <div class="col-md-8">
                <h3>Blog Posts</h3>
                @foreach (var post in Model.BlogPosts)

                    //for (int i = 6; i < 12; i++){
                    //Model.BlogPosts[i].;
                {
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3>@post.BlogPostTitle<small class="pull-right">@post.TimeCreated</small>
                            </h3>
                        </div>

                        <div class="panel-body">
                            <div class="col-md-12">
                                <p>Post Text</p>
                                <blockquote>@Html.Raw(post.Description)</blockquote>
                            </div>
                            <div class="row">
                                <div class="col-md-4">
                                    <p>Category: @post.Category.CategoryTitle</p>
                                </div>
                                <div class="col-md-3 pull-right">
                                    <p>Hashtags</p>
                                    @if (post.Hashtags.Count > 0)
                                    {
                                        string hashtags = "";
                                        for (int i = 0; i < post.Hashtags.Count - 1; i++)
                                        {
                                            hashtags += "#" + post.Hashtags[i].HashtagTitle + ", ";
                                        }
                                        hashtags += "#" + post.Hashtags[post.Hashtags.Count - 1].HashtagTitle;
                                        <p>@hashtags</p>
                                    }
                                    else
                                    {
                                        <p>No hashtags added...</p>
                                    }
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="col-md-2">
                                    <small><cite title="Source Title">By: @(post.User.FirstName + " " + post.User.LastName)</cite></small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

