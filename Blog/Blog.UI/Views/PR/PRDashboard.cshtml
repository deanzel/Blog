@model Blog.UI.Models.PrVM

@{
    Layout = null;
}



<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cerulean/bootstrap.min.css" rel="stylesheet" typ="text/css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <meta name="viewport" content="width=device-width" />
    <title>JsDate</title>
</head>

<div id="admin-nav" class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
        <div class="navbar-collapse collapse">
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>


<body id="pr-body" ng-app="PR">
    <section ng-controller="PRPanelController as panel">
        <div class="row">
            <div class="col-sm-3 col-md-2  sidebar">
                <ul class="nav nav-sidebar">
                    <li ng-class="{ active: panel.isSelected(1)}">
                        <a href ng-click="panel.selectTab(1)">Dashboard</a>
                    </li>
                    <li ng-class="{ active: panel.isSelected(2)}">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    </li>
                    <li>@Html.ActionLink("Add New Page", "AddNewPage", "Page")</li>
                    <li>@Html.ActionLink("Add New Post", "AddNewBlogPost", "BlogPost")</li>
                </ul>
            </div>
            <div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-10 col-md-offset-2 main">
                <br/>
                <h2>PR Dashboard</h2>
                <hr/>
                <!--DASHBOARD-->
                <div ng-show="panel.isSelected(1)">
                    <div class="col-md-3">
                        <div class="panel">
                            <div class="panel-body">
                                <a href="#"><h4 class="glyphicon glyphicon-plus-sign"> New User</h4></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="panel">
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-plus-sign"> @Html.ActionLink(" Add New Page", "AddNewPage", "Page")</span></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="panel">
                            <div class="panel-body">
                                <a href="#"><span class="glyphicon glyphicon-plus-sign"> @Html.ActionLink(" Add New Post", "AddNewBlogPost", "BlogPost")</span></a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="panel">
                            <div class="panel-body">
                                <a href="#"><h4 class="glyphicon glyphicon-plus-sign"> New Profile</h4></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @*@RenderSection("scripts", required: false)*@
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app/pr.js"></script>
</body>
</html>
