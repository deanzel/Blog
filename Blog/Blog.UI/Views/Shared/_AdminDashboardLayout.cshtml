@using System.Diagnostics.Eventing.Reader
@using Blog.Models

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootswatch/3.3.5/cerulean/bootstrap.min.css" rel="stylesheet" type="text/css"/>
    <link rel="icon" type="image/ico" href="~/favicon.ico">
    <link rel="shortcut icon" href="~/favicon.ico" type="image/x-icon" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", false)
</head>

<body id="admin-body">
    <nav id="admin-nav" class="navbar navbar-nav navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartialDashboard")

</div>
        </div>
    </nav>
    <div class="row">
        <div class="col-sm-2 col-md-2 sidebar hidden-sm hidden-xs">
            <a href="~/Home" title="Home"> <img alt="JS Date" id="jsDate-logo2" src="~/Content/img/Logo_JDate_official.png" /></a>
            <ul class="nav nav-sidebar nav-pills nav-stacked">

                <li><a href="/Admin/AdminDashboard"><span class="glyphicon glyphicon-dashboard"></span> Dashboard</a></li>
                <li><a href="/Admin/ManagePosts"><span class="glyphicon glyphicon-comment"></span> Posts</a></li>
                <li><a href="/Admin/ManageStaticPages"><span class="glyphicon glyphicon-file"></span> Static Pages</a></li>
                <li><a href="/Admin/ManageUsers"><span class="glyphicon glyphicon-user"></span> Users</a></li>
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#"><span class="glyphicon glyphicon-plus"></span> Add <span class="caret"></span>
                    </a>
                    <ul class="dropdown-menu">
                        <li><a href="/BlogPost/AddNewBlogPost"><span class="glyphicon glyphicon-plus-sign"></span> Post</a></li>
                        <li><a href="/Page/AddNewPage"><span class="glyphicon glyphicon-plus-sign"></span> Static Page</a></li>
                        <li><a href="/Admin/AddNewUser"><span class="glyphicon glyphicon-plus-sign"></span> User</a></li>
                    </ul>
                </li>
            </ul>
</div>

    </div>
    <div class="body-content">
        @RenderBody()
        <hr />
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/app/admin.js"></script>
    <script src="~/Scripts/app/staticpages.js"></script>
</body>
</html>

