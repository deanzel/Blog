@model Blog.UI.Models.AdminVM
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-10 col-md-offset-2 main">
    <h2>Welcome, @Model.User.FirstName! </h2>
    <hr />
    <!--DASHBOARD-->
    <!--Only Visible on mobile-->
    <div class="container">
        <div class="row">
            <div class="col-md-4 hidden-lg hidden-md">
                <div class="panel new-manageposts-panel">
                    <a href="/Admin/ManagePosts">
                        <div class="panel-body">
                            <div class="col-xs-10">
                                <span class="glyphicon glyphicon-comment glyphicon-comment-alt padding-left-20"></span>
                                <br/>
                                <h4><span class="glyphicon glyphicon-edit glyphicon-edit-alt"></span> Manage Posts</h4>
                            </div>
                            <div class="col-xs-2">
                                <a href="#" class="badge"><h6>@Model.BlogStats.TotalActivePosts</h6></a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-4 hidden-lg hidden-md">
                <div class="panel new-manageusers-panel">
                    <a href="/Admin/ManageUsers">
                        <div class="panel-body">
                            <div class="col-xs-10">
                                <span class="glyphicon glyphicon-user glyphicon-user-alt padding-left-20"></span>
                                <br />
                                <h4><span class="glyphicon glyphicon-edit glyphicon-edit-alt"></span> Manage Users</h4>
                            </div>
                            <div class="col-xs-2">
                                <a href="#" class="badge"><h6>@Model.BlogStats.TotalUsers</h6></a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-md-4 hidden-lg hidden-md">
                <div class="panel new-managepages-panel">
                    <a href="/Admin/ManageStaticPages">
                        <div class="panel-body">
                            <div class="col-xs-10">
                                <span class="glyphicon glyphicon-file glyphicon-file-alt padding-left-20"></span>
                                <br/>
                                <h4><span class="glyphicon glyphicon-edit glyphicon-edit-alt"></span> Manage Pages</h4>
                            </div>
                            <div class="col-xs-2">
                                <a href="#" class="badge"><h6>@Model.BlogStats.TotalStaticPages</h6></a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        
       
    </div>

    <!--VISIBLE ALWAYS-->
    <div class="col-sm-12 col-md-12">
        <div class="row">
            <div class="col-md-4">
                <div class="panel new-user-panel">
                    <a href="/Admin/AddNewUser">
                        <div class="panel-body">
                            <div class="col-xs-10">
                                <span class="glyphicon glyphicon-user glyphicon-user-alt padding-left-20"></span>
                                <br/>
                                <h4><span class="glyphicon glyphicon-plus-sign glyphicon-plus-sign-alt"></span> New User</h4>

                            </div>
                            <div class="col-xs-2">
                                <a href="#" class="badge"><h6>@Model.BlogStats.TotalUsers</h6></a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel new-post-panel">
                    <a href="/BlogPost/AddNewBlogPost/">
                        <div class="panel-body">

                            <div class="col-xs-10">
                                <span class="glyphicon glyphicon-pencil glyphicon-pencil-alt padding-left-20"></span>
                                <br/>
                                <h4><span class="glyphicon glyphicon-plus-sign glyphicon-plus-sign-alt"></span> New Post</h4>

                            </div>
                            <div class="col-xs-2">
                                <a href="#" class="badge"><h6>@Model.BlogStats.TotalActivePosts</h6></a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="panel new-page-panel">
                    <a href="/Page/AddNewPage/">
                        <div class="panel-body">
                            <div class="col-xs-10">
                                <span class="glyphicon glyphicon-file glyphicon-file-alt padding-left-20"></span>
                                <br/>
                                <h4><span class="glyphicon glyphicon-plus-sign glyphicon-plus-sign-alt"></span> New Page</h4>

                            </div>
                            <div class="col-xs-2">
                                <a href="#" class="badge"><h6>@Model.BlogStats.TotalStaticPages</h6></a>
                            </div>
                        </div>
                    </a>
                </div>
            </div>

            <div class="col-md-4 hidden-lg hidden-md">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Blog Stats</h3>
                    </div>
                    <div class="panel-body">
                        <p><em>Total Users:</em> @Model.BlogStats.TotalUsers</p>
                        <p><em>Admin Users:</em> @Model.BlogStats.TotalAdmins</p>
                        <p><em>Total Posts:</em> @Model.BlogStats.TotalPosts</p>
                        <p><em>Active Posts:</em> @Model.BlogStats.TotalActivePosts</p>
                        <p><em>Unique Hashtags:</em> @Model.BlogStats.TotalHashtags</p>
                        <p><em>Total Static Pages:</em> @Model.BlogStats.TotalStaticPages</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-4 hidden-xs hidden-sm">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Blog Stats</h3>
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-md-6">
                                <p><em>Total Users:</em> @Model.BlogStats.TotalUsers</p>
                                <p><em>Admin Users:</em> @Model.BlogStats.TotalAdmins</p>
                                <p><em>Total Posts:</em> @Model.BlogStats.TotalPosts</p>
                            </div>
                            <div class="col-md-6">
                                <p><em>Active Posts:</em> @Model.BlogStats.TotalActivePosts</p>
                                <p><em>Unique Hashtags:</em> @Model.BlogStats.TotalHashtags</p>
                                <p><em>Total Static Pages:</em> @Model.BlogStats.TotalStaticPages</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>