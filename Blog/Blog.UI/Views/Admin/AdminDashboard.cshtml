@model Blog.UI.Models.AdminVM
@{
    ViewBag.Title = "AdminDashboard";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}




<div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-10 col-md-offset-2 main">
    <br/>
    <h2>Admin Dashboard</h2>
    <hr/>
    <!--DASHBOARD-->
    <div class="container">
        <div class="col-md-offset-1 col-md-3">
            <div class="panel new-user-panel">
                <div class="panel-body">
                    <div class="col-xs-10">
                        <span class="glyphicon glyphicon-user"></span>
                        <br/>
                        <a href="/Page/AddNewPage"><h4><span class="glyphicon glyphicon-plus-sign"></span> New User</h4></a>
                    </div>
                    <div class="col-xs-2">
                        <a href="#" class="badge"><h4>4</h4></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="panel new-post-panel">
                <div class="panel-body">
                    <div class="col-xs-10">
                        <span class="glyphicon glyphicon-pencil"></span>
                        <br/>
                        <a href="/BlogPost/AddNewBlogPost"><h4><span class="glyphicon glyphicon-plus-sign"></span> New Post</h4></a>
                    </div>
                    <div class="col-xs-2">
                        <a href="#" class="badge"><h4>4</h4></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="panel new-page-panel">
                <div class="panel-body">
                    <div class="col-xs-10">
                        <span class="glyphicon glyphicon-link"></span>
                        <br/>
                        <a href="#"><h4><span class="glyphicon glyphicon-plus-sign"></span> New Page</h4></a>
                    </div>
                    <div class="col-xs-2">
                        <a href="#" class="badge"><h4>4</h4></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

    




   