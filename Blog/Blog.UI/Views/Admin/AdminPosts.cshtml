@model Blog.UI.Models.AdminVM

@{
    ViewBag.Title = "AdminPosts";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="col-xs-12 col-sm-offset-3 col-sm-9 col-md-10 col-md-offset-2 main">
    <br/>
    <h2>Posts</h2>
    <hr/>
    <div class="container">
        <div class="col-md-10">
            <div class="panel">
                <div class="panel-heading">
                    <h3 class="panel-title">Post History</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Title</th>
                            <th>Category</th>
                            <th>Author</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>More Info</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var post in Model.BlogPosts)
                        {
                            <tr>
                                <td>@post.BlogPostTitle</td>
                                <td>@post.Category.CategoryTitle</td>
                                <td>@post.User.FirstName @post.User.LastName</td>
                                <td>@post.TimeCreated.ToShortDateString()</td>
                                <td><button class="btn btn-success">Approve</button> <button class="btn btn-warning">Deny</button></td>
                                <td><button class="btn btn-primary">View Post</button></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
