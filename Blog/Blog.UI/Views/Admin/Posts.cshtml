
@{
    ViewBag.Title = "Posts";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<h2>Posts</h2>

<div class="col-md-6">
    <div class="panel">
        <div class="panel-heading">
            <h3 class="panel-title">Blog Posts</h3>
        </div>
        <div class="panel-body">
            @foreach (var post in Model.BlogPosts)
            {
                @post.BlogPostTitle
                @Html.Raw(post.BlogPostText)
                @post.Category.CategoryTitle
                if (post.Hashtags.Count > 0)
                {
                    string hashtags = "";
                    for (int i = 0; i < post.Hashtags.Count - 1; i++)
                    {
                        hashtags += "#" + post.Hashtags[i].HashtagTitle + ", ";
                    }
                    hashtags += "#" + post.Hashtags[post.Hashtags.Count - 1].HashtagTitle;
                    <p>@hashtags</p>
                }
                else
                {
                    <p>No hashtags added...</p>
                }
                @post.User.UserName
                @post.TimeCreated
                @post.BlogPostId
                @post.Status
                @post.ExpirationDate
            }

           
        </div>
    </div>
</div>
             